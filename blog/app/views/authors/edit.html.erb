<div>
  <%= link_to 'К списку постов', url_for(:back) %>
  <%= form_for @author do |f| %>
    <%= f.text_field :first_name, value: @author.first_name, style: "margin: 10px"%><br>
    <%= f.text_field :last_name, value: @author.last_name, style: "margin: 10px" %><br>
    <%= f.submit "Измеинить", style: "margin: 10px" %>
  <% end %>
</div>